{
	"name": "schedule-manager",
	"version": "1.0.0",
	"description": "A mobile-first scheduling application for small businesses to manage workers, jobs, and schedules",
	"author": "Adam Sanclemente <adam@sanclemente.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/adamsanclemente/Schedule-Manager.git"
	},
	"keywords": [
		"scheduling",
		"workforce-management",
		"calendar",
		"svelte",
		"sveltekit",
		"prisma",
		"mongodb",
		"small-business"
	],
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "prisma generate && vite build",
		"preview": "vite preview",
		"start": "node build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:seed": "prisma db seed",
		"db:studio": "prisma studio",
		"db:reset": "prisma migrate reset"
	},
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	},
	"devDependencies": {
		"@event-calendar/core": "^2.7.0",
		"@event-calendar/day-grid": "^2.7.0",
		"@event-calendar/list": "^2.7.0",
		"@event-calendar/time-grid": "^2.7.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.12.12",
		"@types/validator": "^13.12.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prisma": "^5.13.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-superforms": "^2.13.1",
		"tailwindcss": "^3.4.3",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"vite": "^5.0.3",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^5.13.0",
		"bits-ui": "^0.21.10",
		"clsx": "^2.1.1",
		"formsnap": "^1.0.0",
		"lucide-svelte": "^0.378.0",
		"mode-watcher": "^0.3.1",
		"svelte-sonner": "^0.3.24",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"validator": "^13.12.0"
	}
}
